CREATE DEFINER=`root`@`localhost` TRIGGER `blog`.`camisetas_BEFORE_INSERT` BEFORE INSERT ON `camisetas` FOR EACH ROW
    insert into camisetas set camisetas =
    new.id +
    new.name +
    new.description +
    new.info +
    new.price +
    new.price_sem +
    new.active +
    new.quantidade +
    new.quantidade_tamanho_p +
    new.quantidade_tamanho_m +
    new.quantidade_tamanho_g +
    new.quantidade_tamanho_gg +
    new.quantidade_tamanho_2gg +
    new.quantidade_tamanho_3gg +
    new.image_id +
    new.user_id +
    new.created_at +
    new.updated_at

    CREATE DEFINER=`root`@`localhost` TRIGGER quantidade_insert AFTER INSERT
    ON camisetas
    FOR EACH ROW
        INSERT INTO camisetas SET new.quantidade =
        new.quantidade -
        new.quantidade_tamanho_p +
        new.quantidade_tamanho_m +
        new.quantidade_tamanho_g +
        new.quantidade_tamanho_gg +
        new.quantidade_tamanho_2gg +
        new.quantidade_tamanho_3gg

        CREATE DEFINER=`root`@`localhost` trigger update_tamanhos before update
        on camisetas
        for each row set new.quantidade =
         new.quantidade_tamanho_p +
         new.quantidade_tamanho_m +
          new.quantidade_tamanho_g +
           new.quantidade_tamanho_gg +
           new.quantidade_tamanho_2gg +
           new.quantidade_tamanho_3gg


        CREATE DEFINER = CURRENT_USER TRIGGER
        `blog`.`camisetas_AFTER_UPDATE` AFTER UPDATE ON `camisetas` FOR EACH ROW


        CREATE DEFINER = CURRENT_USER TRIGGER
         `blog`.`camisetas_BEFORE_DELETE` BEFORE DELETE ON `camisetas` FOR EACH ROW


        CREATE DEFINER=`root`@`localhost` TRIGGER quantidade_delete AFTER DELETE
        ON camisetas
        FOR EACH ROW
            UPDATE camisetas SET old.quantidade = old.quantidade_tamanho_p + old.quantidade_tamanho_m + old.quantidade_tamanho_g + old.quantidade_tamanho_gg + old.quantidade_tamanho_2gg + old.quantidade_tamanho_3gg
        WHERE id = camisetas